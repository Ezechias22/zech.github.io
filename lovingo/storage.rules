rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les photos de profil
    match /users/{userId}/photos/{imageId} {
      allow read: if true; // Photos visibles par tous
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Règles pour les vidéos de profil
    match /users/{userId}/videos/{videoId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 50 * 1024 * 1024 // Max 50MB
                   && request.resource.contentType.matches('video/.*');
    }
    
    // Règles pour les messages avec médias
    match /chat/{chatId}/{mediaId} {
      allow read, write: if request.auth != null;
    }
  }
}
